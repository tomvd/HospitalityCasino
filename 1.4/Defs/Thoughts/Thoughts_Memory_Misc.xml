<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThoughtDef>
    <defName>HC_WonSlotMachineGame</defName>
    <durationDays>2.5</durationDays>
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>won a game of slots</label>
        <description>I had some luck on the pokies!</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>RiggedSlotmachine</defName>
    <durationDays>5</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>10</stackLimit>
    <stages>
      <li>
        <label>rigged slotmachine</label>
        <description>I think the slot machine is rigged.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Kind</li>
      <li>Ascetic</li>
    </nullifyingTraits>
  </ThoughtDef>

  <ThoughtDef>
    <defName>GenerousSlotmachine</defName>
    <durationDays>5</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>10</stackLimit>
    <stages>
      <li>
        <label>generous slotmachine</label>
        <description>Feels like the slot machine is very generous today.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>  
</Defs>
